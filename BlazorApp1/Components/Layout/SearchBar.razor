private void NavigateToRecipe(Recipe recipe)
{
    try 
    {
        NavigationManager.NavigateTo($"/recipe/{recipe.Id}");
    }
    catch (Exception ex)
    {
        errorMessage = $"Navigation failed: {ex.Message}";
        Logger.LogError(ex, "Navigation error");
        StateHasChanged();
    }
}

